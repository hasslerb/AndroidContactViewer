<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.umnappclass.contactviewer" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/contactsapp"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.umnappclass.contactviewer.MainActivity"
            android:label="@string/title_activity_main"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.umnappclass.contactviewer.DetailsActivity"
            android:label="@string/details_title" >
        </activity>
        <activity
            android:name="com.umnappclass.contactviewer.EditDetailsActivity"
            android:label="@string/edit_details_title"
            android:windowSoftInputMode="stateUnchanged">
        </activity>
    </application>

</manifest>
